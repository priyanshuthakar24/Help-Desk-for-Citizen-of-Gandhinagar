<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/collaps.css">
    </head>

    <body>
        <main>

            <%- include('../includes/nav.ejs') %>

                <div class="header1 nine">
                    <h1>
                        <%= deptinfo.name%> <span>~</span>
                    </h1>
                    <h3>
                        &nbsp;&nbsp;&nbsp;<i class="fa-duotone fa-phone-rotary"></i>&nbsp; : +91 <%= deptinfo.mobileno
                            %>
                    </h3>
                    <h3>
                        &nbsp;&nbsp;&nbsp;<i class="fa-solid fa-envelope-open"></i>&nbsp; : <%= deptinfo.email %>
                    </h3>
                    <h3>
                        &nbsp;&nbsp;&nbsp;<i class="fa-regular fa-link"> </i>&nbsp; : <a href="<%= deptinfo.url %>">
                            <%= deptinfo.url %>
                        </a>
                    </h3>
                    <h1><span>~</span></h1>
                    <div class="bs">
                        <% for( let key of deptinfo.locations) { %>
                            <h2>
                                <div class="detail">
                                    location :<%= key.address%> <br> <br>
                                        Contact Person : <%=key.personname%> <br><br>
                                            Department contact : <%=key.mobilenolocation %> <br><br>
                                                Open Time : <%=key.opentime%> <br><br>
                                                    closing Time: <%=key.closetime%> <br><br>
                                </div>
                            </h2>
                            <%}%>
                    </div>
                    <h1><span>~</span></h1>
                </div>
                <div class="solution">
                    <div class="header1 nine">
                        <h1>અપના પ્રશ્નો:-</h1>
                    </div>
                    <% for( let keydata of deptinfo.query){%>

                        <details>
                            <summary>
                                <%= keydata.question %>
                            </summary>
                            <div class="content">
                                <p>
                                    <%= keydata.solution %>
                                </p>

                                <% for(let keyvalue of keydata.attachment){%>
                                    <p>
                                        <a href="<%= keyvalue.attachmentlink %>" target="_blank">
                                            <i class="fa-regular fa-file-pdf">
                                                <%= keyvalue.attachmentname %>
                                            </i>
                                        </a>
                                    </p>
                                    <% } %>
                            </div>
                        </details>
                        <%}%>
                </div>
        </main>
        <%- include('../includes/end.ejs') %>